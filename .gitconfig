[user]
	name = sergigp
	email = sergi.gonzalez@akamon.com
[core]
	autocrlf = input
	excludesfile = /Users/sergigp/.gitignore_global
	editor = subl -n -w
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
    ci = commit
    st = status
    co = checkout
    br = branch
    ls = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]cn" --decorate --date=short --no-merges
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat --no-merges
    filelog = log -u
    diffc  = "!f() { git diff "$1"^.."$1"; }; f"
    gr = grep -Iin
[commitlor]
    ui = true
[credential]
	helper = osxkeychain
[mergetool]
	keepBackup = true
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
